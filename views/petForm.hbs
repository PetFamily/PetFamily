<h3 class="center-align">Add your pet</h3>
<form action="/main/pets" method="POST" enctype="multipart/form-data">
  <label for="name">Pet Name</label>
  <input type="text" name="name" id="name" required> <br><br>

  <label for="type">Select your animal</label>
  <select class="browser-default" name="type" id="type" required>
    <option selected disabled> Choose One</option>
    <option value="Dog">Dog</option>
    <option value="Cat">Cat</option>
    <option value="Other">Other</option>
  </select> <br><br>

  <label for="description">Description</label>
  <textarea name="description" id="name"></textarea> <br><br>

  <label for="age">Age</label>
  <input type="text" name="age" id="age"> <br><br>

  <label for="notes">Notes</label>
  <input type="text" name="notes" id="notes"> <br><br>

  <label for="vaccunationCompleted">Is vaccunated?</label>
  <select class="browser-default" name="vaccunationCompleted" id="vaccunationCompleted">
    <option value="true">Yes</option>
    <option value="false">No</option>
  </select> <br>
  
  <label for="petPhoto">Photo</label>
  <input type="file" name="petPhoto" id="petPhoto"><br>

  <button class="waves-effect waves-light btn" type="submit">Send</button>
</form>